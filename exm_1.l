colno=colno+yyleng;}
[:][=] {printf("Assignment(%d, %d, %d); ", lineno, colno, colno-1+yyleng);
colno=colno+yyleng;}
[\;] {printf("Colon(%d, %d, %d); ", lineno, colno, colno-1+yyleng);
colno=colno+yyleng;}
[w][r][i][t][e] {printf("KW_Write(%d, %d, %d); ", lineno, colno, colno-1+yyleng);
colno=colno+yyleng;}
[r][e][a][d] {printf("KW_Read(%d, %d, %d); ", lineno, colno, colno-1+yyleng);
colno=colno+yyleng;}
[w][h][i][l][e] {printf("KW_While(%d, %d, %d); ", lineno, colno, colno-1+yyleng);
colno=colno+yyleng;}
[d][o] {printf("KW_Do(%d, %d, %d); ", lineno, colno, colno-1+yyleng);
colno=colno+yyleng;}
[i][f] {printf("KW_If(%d, %d, %d); ", lineno, colno, colno-1+yyleng);
colno=colno+yyleng;}
[t][h][e][n] {printf("KW_Then(%d, %d, %d); ", lineno, colno, colno-1+yyleng);
colno=colno+yyleng;}
[e][l][s][e] {printf("KW_Else(%d, %d, %d); ", lineno, colno, colno-1+yyleng);
colno=colno+yyleng;}
[a-zA-Z_][a-zA-Z_0-9]* {yytext [yyleng] = (char) 0;
printf("Var(\"%s\", %d, %d, %d); ", yytext, lineno, colno, colno-1+yyleng);
colno=colno+yyleng;}
([+|\-|/|%|>|<])|([=|\!][=])|([>|<][=])|([&][&])|([\|][\|]) {yytext [yyleng] = (char) 0; 
printf("Op(\"%s\", %d, %d, %d); ", yytext, lineno, colno, colno-1+yyleng);
colno=colno+yyleng;}
([*]) {printf("Op(\"%s\", %d, %d, %d); ", yytext, lineno, colno, colno-1+yyleng);
colno=colno+yyleng;}
[1-9][0-9]* {yytext [yyleng] = (char) 0;
printf("Num(\"%s\", %d, %d, %d); ", yytext, lineno, colno, colno-1+yyleng);
colno=colno+yyleng;}
([\(])|([\)]) {yytext [yyleng] = (char) 0;
printf("Parenthesis(\"%s\", %d, %d, %d); ", yytext, lineno, colno, colno-1+yyleng);
colno=colno+yyleng;}
[^ \r\n] {printf("Error in line %d, columns %d - %d: \"%s\", lexer has been stoped", lineno, colno, colno-1+yyleng, yytext);
return;}
