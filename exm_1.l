colno=1;
lineno=lineno+1;}
[(][*]((([^*])*([^)])*)|((([^*])*([^)])*[*][^)]+[)]([^*])*([^)])*))*)[*][)] {int i;
int begin_lineno=lineno;
int begin_colno=colno;
int end_colno;
for(i=0; i<yyleng; i++)
{
	end_colno=colno;
	colno=colno+1;
	if(yytext[i]=='\n')
	{
		colno=1;
		lineno=lineno+1;
	}
}
char text[yyleng];
for(i=2; i<yyleng; i++)
{
	text[i-2]=yytext[i];
}
text[yyleng-4]='\0';
printf("Comment(\"%s\", %d, %d, %d, %d); ", text, begin_lineno, lineno, begin_colno, end_colno);
}
[*][*] {printf("Op(\"**\", %d, %d, %d); ", lineno, colno, colno-1+yyleng);
colno=colno+yyleng;
}
[\n] {colno=1;
lineno=lineno+1;}
[ ] {colno=colno+1;}
[\t] {colno=colno+1;} 
